@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<div>
    <h3>Weather Forecast</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Temperature</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var entry in Model.WeatherForecasts) {
                <tr>
                    <td>@entry.Date.ToString()</td>
                    <td>@entry.TemperatureF &deg;F / @entry.TemperatureC &deg;C</td>
                    <td>@entry.Summary</td>
                </tr>
            }
        </tbody>
    </table>

    <form method="post">
        <div class="form-group">
            <label asp-for="Correction.Date" class="form-label"></label>
            <input type="date" asp-for="Correction.Date" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Correction.TemperatureC" class="form-label"></label>
            <input asp-for="Correction.TemperatureC" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Correction.Summary" class="form-label"></label>
            <select asp-for="Correction.Summary" asp-items="IndexModel.GetSummaryOptions()" class="form-select"></select>
        </div>
        <div class="form-group">
            <button type="submit" class="btn-primary">Send</button>
            <button type="reset" class="btn-outline-secondary">Clear</button>
        </div>
    </form>
</div>
